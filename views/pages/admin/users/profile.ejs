<%- include ../../../partials/admin/dashboard -%>
<div class="content-wrapper py-3">
  <div class="container-fluid">
        <div class="card mb-3">
          <div class="card-header">
            <i class="fa fa-fw fa-code"></i>
            Edit Profile
          </div>
          <div class="card-body">
						<form id="edit-post" action="../../admin/user/edit/<%=user.mId %>" method="post">
              <div class="form-group">
	              	<label>Username</label>
							<input autocomplete="off" class="form-control" type="text" name="username" value="<%=user.mUsername %>" disabled/>
							</div>
											
											<div class="form-group">
												<label>Fullname</label>
								<input autocomplete="off" class="form-control" name="fullname" value="<%=user.mFullname %>" />
							</div>
							<div class="form-group">
								<label>Email</label>
								<input class="form-control" name="email" value="<%=user.mEmail %>"/>
							</div>
							<div class="form-group">
								<label>Role</label>
								<select class="form-control" name="role_id">
									<% 
										roles.forEach(function(item){ 
										var selected="" ;
										if(item.mId == user.mRoleId) selected="selected";
									%>
										<option <%= selected %> value="<%= item.mId%>" ><%= item.mRole%></option>
									<% }); %>
								</select>
							</div>
							<div class="form-group">
				              	<label>password</label>
				              	<a id="genarate" class="btn btn-primary">Genarate</a>
			              	</div>
			              	<script type="text/javascript">
				              	$(document).ready(function(){
				              	    $("#genarate").click(function(){
				              	        $("#pass").toggleClass("hiden");
				              	    });
				              	});

			              	</script>
			              	<div id="pass" class="form-group hiden">
				              	<label>Password</label>
				              	<input class="form-control" type="password" name="password" value="" />
			              	</div>
							<div>
								<input class="btn btn-primary" type="submit" name="submit" value="Update" />
							</div>
            </form>
          </div>
        </div>
      </div>
  </div>
  <%- include ../../../partials/admin/footer -%>
